{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@db/*": ["./db/*"],
      "@globaltypes": ["./types"]
    }
  },
  "include": ["./**/*.ts", "./types"],
  "exclude": ["node_modules", "dist"]
}
