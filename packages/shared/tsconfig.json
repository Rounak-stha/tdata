{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@db/*": ["./src/db/*"],
      "@types": ["./src/types"]
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist"]
}
